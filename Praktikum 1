 //Koffer A5 wurde genutzt
  
   
   int frequency = 1000;
  char control = '0';
  
  void setup() 
{
  // put your setup code here, to run once:
  pinMode (13, OUTPUT);
  Serial.begin (9600);
}

// TEST TEST TEST TEST TEST TEST TEST TEST TEST TEST TEST TEST by Lior

void loop() {
  // put your main code here, to run repeatedly:
  //printing "Hello World" via serial port
  Serial.println ("Hello World");
  Serial.print ("Delay is:");
  Serial.println (frequency);
  delay (1000);
  

  char control = Serial.read();
  switch (control) 
  {
    case '+':
    frequency = frequency + 100;
    digitalWrite (13, HIGH);
    delay (frequency);
    digitalWrite (13, LOW);
    break;

    case '-':
    frequency = frequency - 100;
    digitalWrite (13, HIGH);
    delay (frequency);
    digitalWrite (13, LOW);
    break;

    default:
    frequency = frequency;
    digitalWrite (13, HIGH);
    delay (frequency);
    digitalWrite (13, LOW);
    break;
  
}
}
 
